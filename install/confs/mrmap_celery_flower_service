[Unit]
Description=Celery Flower Statistics Service
After=network.target

[Service]
Type=simple
ExecStart=celery -A MrMap --workdir=/opt/MrMap --url_prefix=flower flower
ExecReload="/usr/bin/pkill -f flower;/usr/local/bin/celery -A MapSkinner --workdir=/opt/MrMap --url_prefix=flower flower"
ExecStop="/usr/bin/pkill -f flower"
Restart=on-abort


[Install]
WantedBy=multi-user.target
