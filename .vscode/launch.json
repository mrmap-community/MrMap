    // install python 3.10 on ubuntu from source: https://ubuntuhandbook.org/index.php/2021/10/compile-install-python-3-10-ubuntu/
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug vitest",
            "skipFiles": [
                "<node_internals>/**",
            ],
            "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
            //"args": ["run", "${relativeFile}"],
            "smartStep": true,
            "console": "integratedTerminal",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**",
                "node_modules/sortablejs/**/*.js",
            ]
        },
        {
            "name": "Debug: backend",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 3001
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/mrmap",
                    "remoteRoot": "/opt/mrmap"
                },
                {
                    "localRoot": "${workspaceFolder}/.venv/lib/python3.12/site-packages",
                    "remoteRoot": "/opt/venv/lib/python3.12/site-packages"
                }
            ],
            "justMyCode": false
        },
        {
            "name": "Debug: celery-worker-default",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 3002
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/mrmap",
                    "remoteRoot": "/opt/mrmap"
                },
                {
                    "localRoot": "${workspaceFolder}/.venv/lib/python3.12/site-packages",
